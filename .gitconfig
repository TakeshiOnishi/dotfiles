[include]
  path = ~/.gitconfig.local

[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input  
  safecrlf = true
	
[color]
	ui = true

[pull]
  rebase = false

[init]
  defaultBranch = main

[alias]
  st = status -sb
  sh = show
  ci = commit
  co = checkout
  br = branch
  logal = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
  loga = log -30 --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
  dif = diff
  d1 = diff HEAD~           
  d2 = diff HEAD~~          
  d3 = diff HEAD~~~         
  d4 = diff HEAD~~~~        
  d5 = diff HEAD~~~~~       
  d10 = diff HEAD~~~~~~~~~~ 
  delete-merged-branches = !git branch --merged | grep -vE '^\\*|main$|master$|develop$' | xargs -I % git branch -d %

[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
